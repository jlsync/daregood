<h1>Listing charities</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Mission</th>
    <th>Url</th>
    <th>Logo url</th>
    <th>Email</th>
  </tr>

<% @charities.each do |charity| %>
  <tr>
    <td><%=h charity.name %></td>
    <td><%=h charity.mission %></td>
    <td><%=h charity.url %></td>
    <td><%=h charity.logo_url %></td>
    <td><%=h charity.email %></td>
    <td><%= link_to 'Show', charity %></td>
    <td><%= link_to 'Edit', edit_charity_path(charity) %></td>
    <td><%= link_to 'Destroy', charity, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New charity', new_charity_path %>